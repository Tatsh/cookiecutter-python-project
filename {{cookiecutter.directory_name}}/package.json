{
  "contributors": {{ cookiecutter.authors.list|jsonify }},
  "license": "MIT",
  "name": "{{ cookiecutter.directory_name }}",
  "repository": "git@github.com:{{ cookiecutter.github_username }}/{{ cookiecutter.repository_name }}.git",
  "scripts": {
    "check-formatting": "prettier -c './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.yml' ./.prettierrc ./.style.yapf && isort . --check && yapf -rd {{ cookiecutter.directory_name }} .stubs test",
    "check-spelling": "cspell --no-progress './**/*'  './**/.*'",
    "format": "prettier -w './**/*.cfg' './**/*.ini' './**/*.md' './**/*.toml' './**/*.yml' ./.prettierrc ./.style.yapf && isort . && yapf -ri {{ cookiecutter.directory_name }} .stubs test",
    "install-python-deps": "python -m pip install --upgrade pip && pip install poetry && poetry install && pip install -e . && pip install mypy pylint pylint-quotes pytest pytest-cov coveralls pytest-mock types-requests toml yapf",
    "mypy": "mypy .",
    "pylint": "pylint {{ cookiecutter.directory_name }}",
    "qa": "yarn mypy && yarn pylint && yarn check-spelling && yarn check-formatting"
  },
  "version": "0.0.1"
}
